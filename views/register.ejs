<%- include('./layouts/header') %>
<div class="card col col-8 offset-2 mt-3">
    <div class="card-header text-center">Registrarse</div>
    <div class="card-body">
        <form method="POST" action="/register">
            <div class="row">
                <label for="username" class="col col-4 offset-2">Nombre de Usuario</label>
                
                <input class="col col-4" id="username" type="text" name="username" required>
            </div>

            <div class="row mt-3">
                <label for="password" class="col col-4 offset-2">Contraseña</label>
                
                <input class="col col-4" id="password" type="password" name="password" required>
            </div>

            <div class="d-flex justify-content-center mt-3">
                <button class="btn btn-success" type="submit">Registrarse</button>
            </div>
            <div>
                ¿Tienes una cuenta? Inicia Sesion <a class="btn btn-link" href="/login">Aqui</a>
            </div>
        </form>
    </div>
</div>
<%- include('./layouts/footer') %>
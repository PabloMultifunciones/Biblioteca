
<%- include('./layouts/header') %>
<div class="card col col-8 offset-2 mt-3">
    <div class="card-header text-center">
        Editar Libro: 
    </div>
    <div class="card-body">
        <form action="/update" method="POST">
            <input hidden name="id" value="<%= book.id %>">
            <div class="row mb-2">
                <label for="title" class="col col-2 offset-1">Titulo</label>
                
                <div class="col col-9">
                    <input type="text" class="form-control" name="title" value="<%= book.title %>">
                </div>
            </div>
            
            <div class="row mb-2">
                <label for="description" class="col col-2 offset-1">Descripcion</label>
                
                <div class="col col-9">
                    <input type="text" class="form-control" name="description" value="<%= book.description %>">
                </div>
            </div>

            <div class="row mb-2">
                <label for="author" class="col col-2 offset-1">Autor</label>
                
                <div class="col col-9">
                    <input type="text" class="form-control" name="author" value="<%= book.author %>">
                </div>
            </div>

            <div class="row mb-2">
                <label for="specimens" class="col col-2 offset-1">Ejemplares</label>
                
                <div class="col col-9">
                    <input type="number" class="form-control" name="specimens" value="<%= book.specimens %>">
                </div>
            </div>

            <button type="submit" class="btn btn-success">Editar</button>
        </form>
    </div>
</div>

<%- include('./layouts/footer') %>
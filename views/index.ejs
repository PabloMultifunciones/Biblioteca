<%- include('./layouts/header') %>
<a class="btn btn-link" href="/logout">Cerrar Sesion</a>
<div class="row">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Titulo</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Autor</th>
                <th scope="col">Ejemplares</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach((book) => { %>
                <tr>
                    <th scope="row">
                        <%= book.id %>
                    </th>
                    <td>
                        <%= book.title %>
                    </td>
                    <td>
                        <%= book.description %>
                    </td>
                    <td>
                        <%= book.author %>
                    </td>
                    <td>
                        <%= book.specimens %>
                    </td>
                    <td>
                        <a href="/edit/<%= book.id %>"><button type="button" class="btn btn-warning">Editar</button></a>
                        <a href="/delete/<%= book.id %>"><button type"button" class="btn btn-danger">Borrar</button></a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/create"><button class="col col-12 btn btn-primary">Agregar libro</button></a>
</div>
<%- include('./layouts/footer') %>